const axios = require('axios');

// Task 10: Get all books using async/await
async function getAllBooks() {
  const res = await axios.get('http://localhost:5000/books');
  console.log(res.data);
}

// Task 11: Get book by ISBN using Promises
function getByISBN(isbn) {
  axios.get(`http://localhost:5000/books/isbn/${isbn}`)
    .then(res => console.log(res.data))
    .catch(err => console.error('Book not found'));
}

// Task 12: Get books by author using async/await
async function getByAuthor(author) {
  const res = await axios.get(`http://localhost:5000/books/author/${author}`);
  console.log(res.data);
}

// Task 13: Get books by title using async/await
async function getByTitle(title) {
  const res = await axios.get(`http://localhost:5000/books/title/${title}`);
  console.log(res.data);
}

// Export functions
module.exports = {
  getAllBooks,
  getByISBN,
  getByAuthor,
  getByTitle
};
